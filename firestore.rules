rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to the productionApps collection
    match /productionApps/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the reminders collection
    match /reminders/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the notes collection
    match /notes/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the todos collection
    match /todos/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the tasks collection (Task Management)
    match /tasks/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the personal finance collections
    match /personalFinanceTransactions/{document} {
      allow read, write: if true;
    }
    
    match /personalFinanceBudgets/{document} {
      allow read, write: if true;
    }
    
    match /personalFinanceEMIs/{document} {
      allow read, write: if true;
    }
    
    match /personalFinanceLoans/{document} {
      allow read, write: if true;
    }
    
    match /personalFinanceCreditCards/{document} {
      allow read, write: if true;
    }
    
    match /personalFinanceSubscriptions/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the personal goals collection
    match /personalGoals/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the personal habits collection
    match /personalHabits/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the projects collection
    match /projects/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the homeTracker collection
    match /homeTracker/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the dietInstructions collection
    match /dietInstructions/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the Amaravati video editing instructions collection
    match /amaravatiVideoEditingInstructions/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the businessUsers collection for authentication
    match /businessUsers/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the businessProjects collection
    match /businessProjects/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the businessCredentials collection
    match /businessCredentials/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the Amaravati places collection
    match /places/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the Amaravati visits collection
    match /visits/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to user-specific collections
    match /users/{userId} {
      // Allow read and write access to temple plans for authenticated users
      match /templePlans/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow read and write access to other user-specific collections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Diet Tracker Collections - Allow read and write access
    match /familyMembers/{document} {
      allow read, write: if true;
    }
    
    match /dailyDietPlans/{document} {
      allow read, write: if true;
    }
    
    match /consumptionEntries/{document} {
      allow read, write: if true;
    }
    
    match /dailyFeedback/{document} {
      allow read, write: if true;
    }
    
    match /groceryPlans/{document} {
      allow read, write: if true;
    }
    
    match /groceryItems/{document} {
      allow read, write: if true;
    }
  }
}
